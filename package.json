{
  "name": "deploy-typescript-lambda-with-cdk",
  "version": "0.1.0",
  "bin": {
    "deploy-typescript-lambda-with-cdk": "bin/deploy-typescript-lambda-with-cdk.js"
  },
  "scripts": {
    "build": "tsc",
    "build:lambda": "cd lambda && npm run build",
    "watch": "tsc -w",
    "test": "jest",
    "clean:lambda": "find lambda -path '*/node_modules/*' -prune -o -type d -name \"build\" -exec rm -rf {} +",
    "cdk": "cdk"
  },
  "devDependencies": {
    "@aws-sdk/client-ses": "^3.994.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "aws-cdk": "^2.1106.1",
    "esbuild": "^0.27.3",
    "jest": "^30.2.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.239.0",
    "constructs": "^10.5.1"
  }
}
